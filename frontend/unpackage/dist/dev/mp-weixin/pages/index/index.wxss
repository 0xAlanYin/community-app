.container {
  min-height: 100vh;
  background-color: #f8f8f8;
}
.status-bar {
  height: 44px;
  background-color: #000;
  color: #fff;
  font-size: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16px;
}
.nav-bar {
  height: 52px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  padding: 0 16px;
}
.nav-bar .title {
  font-size: 20px;
  font-weight: 600;
  color: #333;
}
.content {
  height: calc(100vh - 44px - 52px - 83px);
}
.banner {
  height: 200px;
  position: relative;
}
.banner .banner-image {
  width: 100%;
  height: 100%;
}
.banner .banner-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16px;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
}
.banner .banner-content .banner-title {
  color: #fff;
  font-size: 20px;
  font-weight: bold;
}
.banner .banner-content .banner-subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 14px;
  margin-top: 4px;
}
.feature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
  padding: 16px;
}
.feature-grid .feature-item {
  background-color: #fff;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}
.feature-grid .feature-item .feature-icon {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12px;
}
.feature-grid .feature-item .feature-icon .iconfont {
  font-size: 24px;
  color: #007aff;
}
.feature-grid .feature-item .feature-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}
.feature-grid .feature-item .feature-desc {
  font-size: 14px;
  color: #666;
  margin-top: 4px;
}
.news-section {
  padding: 16px;
}
.news-section .section-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 16px;
}
.news-section .news-list .news-item {
  background-color: #fff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}
.news-section .news-list .news-item .news-header {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}
.news-section .news-list .news-item .news-header .avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  margin-right: 12px;
}
.news-section .news-list .news-item .news-header .user-info .username {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}
.news-section .news-list .news-item .news-header .user-info .time {
  font-size: 12px;
  color: #999;
  margin-top: 2px;
}
.news-section .news-list .news-item .news-content {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
}
.news-section .news-list .news-item .news-footer {
  display: flex;
  margin-top: 12px;
  color: #999;
}
.news-section .news-list .news-item .news-footer .action-btn {
  display: flex;
  align-items: center;
  margin-right: 16px;
}
.news-section .news-list .news-item .news-footer .action-btn .iconfont {
  font-size: 16px;
  margin-right: 4px;
}
.news-section .news-list .news-item .news-footer .action-btn .count {
  font-size: 12px;
}