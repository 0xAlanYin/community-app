.container {
  min-height: 100vh;
  background-color: #f8f8f8;
}
.status-bar {
  height: 44px;
  background-color: #000;
  color: #fff;
  font-size: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16px;
}
.nav-bar {
  height: 52px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  padding: 0 16px;
}
.nav-bar .title {
  font-size: 20px;
  font-weight: 600;
  color: #333;
}
.content {
  height: calc(100vh - 44px - 52px - 83px);
}
.user-info {
  background-color: #fff;
  padding: 24px;
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}
.user-info .avatar {
  width: 80px;
  height: 80px;
  border-radius: 40px;
  margin-right: 16px;
}
.user-info .info .nickname {
  font-size: 20px;
  font-weight: 600;
  color: #333;
}
.user-info .info .bio {
  font-size: 14px;
  color: #666;
  margin-top: 4px;
}
.menu-list {
  padding: 0 16px;
}
.menu-list .menu-group {
  background-color: #fff;
  border-radius: 12px;
  overflow: hidden;
}
.menu-list .menu-group .menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #eee;
}
.menu-list .menu-group .menu-item:last-child {
  border-bottom: none;
}
.menu-list .menu-group .menu-item .menu-item-left {
  display: flex;
  align-items: center;
}
.menu-list .menu-group .menu-item .menu-item-left .iconfont {
  font-size: 20px;
  color: #007aff;
  margin-right: 12px;
}
.menu-list .menu-group .menu-item .menu-item-left .menu-title {
  font-size: 16px;
  color: #333;
}
.menu-list .menu-group .menu-item .icon-arrow-right {
  font-size: 16px;
  color: #999;
}