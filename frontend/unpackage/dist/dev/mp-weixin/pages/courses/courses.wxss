.container {
  min-height: 100vh;
  background-color: #f8f8f8;
}
.status-bar {
  height: 44px;
  background-color: #000;
  color: #fff;
  font-size: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16px;
}
.nav-bar {
  height: 52px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  padding: 0 16px;
}
.nav-bar .title {
  font-size: 20px;
  font-weight: 600;
  color: #333;
}
.content {
  height: calc(100vh - 44px - 52px - 83px);
}
.course-list {
  padding: 16px;
}
.course-list .course-item {
  background-color: #fff;
  border-radius: 12px;
  margin-bottom: 16px;
  overflow: hidden;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}
.course-list .course-item .course-cover {
  width: 100%;
  height: 160px;
}
.course-list .course-item .course-info {
  padding: 16px;
}
.course-list .course-item .course-info .course-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}
.course-list .course-item .course-info .course-desc {
  font-size: 14px;
  color: #666;
  margin-top: 8px;
  line-height: 1.5;
}
.course-list .course-item .course-info .course-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12px;
}
.course-list .course-item .course-info .course-meta .price {
  font-size: 20px;
  font-weight: 600;
  color: #ff6b6b;
}
.course-list .course-item .course-info .course-meta .students {
  font-size: 12px;
  color: #999;
}